<link rel="stylesheet" href="https://build.origami.ft.com/v2/bundles/css?modules=o-grid@4.3.0,o-fonts@2.2.0,o-colors@3.5.4,o-typography@4.3.2,o-teaser@1.0.0-beta.7"/>
<script src="https://build.origami.ft.com/v2/bundles/js?modules=o-grid@4.3.0,o-fonts@2.2.0,o-colors@3.5.4,o-typography@4.3.2,o-teaser@1.0.0-beta.7"></script>

<div class="ft-all-roads-container">
	<div class="o-grid-container">
		<div class="o-grid-row">
			<div data-o-grid-colspan="2">
				<span><img src="//image.webservices.ft.com/v1/images/raw/ftlogo:brand-ft-logo-square?source=hackday-all-roads-plugin"></img></span>
			</div>
			<div data-o-grid-colspan="10">
				<div class="o-teaser o-teaser--small" data-o-component="o-teaser">
					<div class="o-teaser__content">
						{{#if concept}}
							<a class="o-teaser__tag">{{concept}}</a>
						{{/if}}

						{{#if title}}
							<h2 class="o-teaser__heading"><a href="{{webUrl}}">{{title}}</a></h2>
						{{/if}}

						{{#if standfirst}}
							<p class="o-teaser__standfirst">{{standfirst}}</p>
						{{/if}}

						{{#if publishedDate}}
							<div class="o-teaser__timestamp {{inprogress}}">
								<time data-o-component="o-date" class="o-date" datetime="{{publishedDate}}">{{publishedDate}}</time>
							</div>
						{{/if}}
					</div>

					<!--ul class="o-teaser__related">
					<li class="o-teaser__related-item"><a href="#">Related story number one</a></li>
					<li class="o-teaser__related-item"><a href="#">Related story number two with long title</a></li>
					<li class="o-teaser__related-item"><a href="#">Final related story</a></li>
				</ul-->
			</div>
		</div>
	</div>
</div>
</div>
